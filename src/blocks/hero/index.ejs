<div class="hero">
  <div class="hero__overlay"></div>
  <div class="hero__inner">
    <div class="hero__slider">
      <div class="glide__track hero__track" data-glide-el="track">
        <ul class="glide__slides">
          <li class="glide__slide hero__slide">0</li>
          <li class="glide__slide hero__slide">1</li>
          <li class="glide__slide hero__slide">2</li>
          <li class="glide__slide hero__slide">3</li>
          <li class="glide__slide hero__slide">4</li>
        </ul>
      </div>

      <div class="glide__arrows" data-glide-el="controls">
        <button class="hero__control-arrow glide__arrow glide__arrow--left" data-glide-dir="<">
          <img src="../../images/left-arrow.png" alt="left arrow">
        </button>
        <button class="hero__control-arrow hero__control-arrow--right glide__arrow glide__arrow--right" data-glide-dir=">">
          <img src="../../images/left-arrow.png" alt="left arrow">
        </button>
      </div>

      <div class="glide__bullets hero__pagination" data-glide-el="controls[nav]">
        <button class="glide__bullet hero__bullet" data-glide-dir="=0"></button>
        <button class="glide__bullet hero__bullet" data-glide-dir="=1"></button>
        <button class="glide__bullet hero__bullet" data-glide-dir="=2"></button>
        <button class="glide__bullet hero__bullet" data-glide-dir="=3"></button>
        <button class="glide__bullet hero__bullet" data-glide-dir="=4"></button>
      </div>
    </div>
  </div>
</div>
